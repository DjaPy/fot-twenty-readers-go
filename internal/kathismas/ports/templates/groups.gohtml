            <form hx-post="/groups"
                  hx-target="#groups-list"
                  hx-swap="beforeend"
                  hx-on::after-request="this.reset()"
                  class="space-y-4">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-1">–ù–∞–∑–≤–∞–Ω–∏–µ –≥—Ä—É–ø–ø—ã</label>
                    <input type="text"
                           id="name"
                           name="name"
                           required
                           placeholder="–•—Ä–∞–º –ü–æ–∫—Ä–æ–≤–∞"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                </div>
                <div>
                    <label for="start_offset"
                           class="block text-sm font-medium text-gray-700 mb-1">–ö–∞—Ñ–∏–∑–º–∞ –Ω–∞ 1 —è–Ω–≤–∞—Ä—è (1-20)</label>
                    <input type="number"
                           id="start_offset"
                           name="start_offset"
                           min="1"
                           max="20"
                           required
                           value="1"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                    <p class="mt-1 text-xs text-gray-500">–ö–∞–∫–∞—è –∫–∞—Ñ–∏–∑–º–∞ –±—É–¥–µ—Ç —É 1-–≥–æ —á—Ç–µ—Ü–∞ 1 —è–Ω–≤–∞—Ä—è</p>
                </div>
                <button type="submit"
                        class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition font-medium">
                    –°–æ–∑–¥–∞—Ç—å –≥—Ä—É–ø–ø—É
                </button>
            </form>
        </div>
    </div>
    <!-- Right: Groups List -->
    <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow">
            <div class="p-6 border-b border-gray-200 flex justify-between items-center">
                <h2 class="text-lg font-semibold text-gray-900">–ú–æ–∏ –≥—Ä—É–ø–ø—ã</h2>
                <button hx-get="/groups/list"
                        hx-target="#groups-list"
                        hx-swap="innerHTML"
                        class="text-blue-600 hover:text-blue-700 text-sm font-medium">üîÑ –û–±–Ω–æ–≤–∏—Ç—å</button>
            </div>
            <div id="groups-list"
                 hx-get="/groups/list"
                 hx-trigger="load"
                 hx-swap="innerHTML"
                 class="divide-y divide-gray-200">
                <!-- Groups will be loaded here -->
                <div class="p-8 text-center text-gray-500">
                    <svg class="animate-spin h-8 w-8 mx-auto mb-2"
                         xmlns="http://www.w3.org/2000/svg"
                         fill="none"
                         viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                        </path>
                    </svg>
                    –ó–∞–≥—Ä—É–∑–∫–∞ –≥—Ä—É–ø–ø...
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal for adding readers (hidden by default) -->
<div id="reader-modal"
     class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
        <h3 class="text-lg font-semibold mb-4">–î–æ–±–∞–≤–∏—Ç—å —á—Ç–µ—Ü–∞</h3>
        <form id="reader-form" class="space-y-4">
            <input type="hidden" id="reader-group-id" name="group_id">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">–ò–º—è</label>
                <input type="text"
                       name="username"
                       required
                       class="w-full px-3 py-2 border border-gray-300 rounded-md">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">–ù–æ–º–µ—Ä —á—Ç–µ—Ü–∞ (1-20)</label>
                <input type="number"
                       name="reader_number"
                       required
                       min="1"
                       max="20"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Telegram ID (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ)</label>
                <input type="number"
                       name="telegram_id"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">–¢–µ–ª–µ—Ñ–æ–Ω (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ)</label>
                <input type="tel"
                       name="phone"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md">
            </div>
            <div class="flex space-x-2">
                <button type="submit"
                        class="flex-1 bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">–î–æ–±–∞–≤–∏—Ç—å</button>
                <button type="button"
                        onclick="closeReaderModal()"
                        class="flex-1 bg-gray-200 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-300">–û—Ç–º–µ–Ω–∞</button>
            </div>
        </form>
    </div>
</div>
<script>
    function openReaderModal(groupId) {
        document.getElementById('reader-group-id').value = groupId;
        document.getElementById('reader-modal').classList.remove('hidden');
    }

    function closeReaderModal() {
        document.getElementById('reader-modal').classList.add('hidden');
        document.getElementById('reader-form').reset();
    }

    document.getElementById('reader-form').addEventListener('submit', async function(e) {
        e.preventDefault();
        const groupId = document.getElementById('reader-group-id').value;
        const formData = new FormData(this);

        const response = await fetch(`/groups/${groupId}/readers`, {
            method: 'POST',
            body: formData
        });

        if (response.ok) {
            showToast('–ß—Ç–µ—Ü –¥–æ–±–∞–≤–ª–µ–Ω!');
            closeReaderModal();
            htmx.trigger('#groups-list', 'htmx:trigger');
        }
    });
</script>
{{end}}
